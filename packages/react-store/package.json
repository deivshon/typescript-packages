{
    "name": "@deivshon/react-store",
    "version": "0.0.0",
    "license": "MIT",
    "main": "./dist/index.js",
    "module": "./dist/index.mjs",
    "types": "./dist/index.d.ts",
    "files": [
        "dist"
    ],
    "exports": {
        ".": {
            "types": "./dist/index.d.ts",
            "import": "./dist/index.mjs",
            "require": "./dist/index.js"
        },
        "./persist": {
            "types": "./dist/middleware/persist/index.d.ts",
            "import": "./dist/middleware/persist/index.mjs",
            "require": "./dist/middleware/persist/index.js"
        }
    },
    "scripts": {
        "build": "tsup src",
        "typecheck": "tsc --noEmit",
        "typecheck:watch": "tsc --noEmit --watch",
        "format": "pnpm -C ../../ format",
        "format:check": "pnpm -C ../../ format:check",
        "lint": "eslint .",
        "dev": "tsup src --watch"
    },
    "peerDependencies": {
        "react": "^19"
    },
    "devDependencies": {
        "@standard-schema/spec": "^1.0.0",
        "@types/react": "19.0.12"
    },
    "sideEffects": false,
    "repository": {
        "type": "git",
        "url": "git+https://github.com/deivshon/typescript-packages.git",
        "directory": "packages/react-store"
    },
    "bugs": {
        "url": "https://github.com/deivshon/typescript-packages/issues"
    },
    "homepage": "https://github.com/deivshon/typescript-packages#readme",
    "author": {
        "name": "deivshon",
        "url": "https://github.com/deivshon"
    }
}
